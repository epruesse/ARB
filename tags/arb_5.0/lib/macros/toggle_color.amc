#!/usr/bin/perl -w
use lib "$ENV{'ARBHOME'}/lib/";
use ARB;

$gb_main = ARB::open(":","r");
if (! $gb_main ) {
    $error = ARB::get_error();
    print ("$error\n");
    exit 0;
}

$new_val = 1-BIO::remote_read_awar($gb_main,"ARB_NT","color_groups/use");
BIO::remote_awar($gb_main,"ARB_NT","color_groups/use", $new_val);

ARB::close($gb_main);
