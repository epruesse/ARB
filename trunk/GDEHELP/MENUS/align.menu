item:Assemble Contigs
itemmeta: s
itemmethod: ( tr '"%//' '>' <in1 >in1.tmp; \
              CAP2 in1.tmp $OVERLAP $PMATCH >  out1; \
              /bin/rm -f in1.tmp )
itemhelp:CAP2.help

arg:OVERLAP
argtype:slider
arglabel:Minimum overlap?
argmin:5
argmax:100
argvalue:20

arg:PMATCH
argtype:slider
arglabel:Percent match required within overlap
argmin:25
argmax:100
argvalue:90

in:in1
informat:flat

out:out1
outformat:gde

