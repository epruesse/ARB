            RUN_IN_WINDOW((clustalw -output=PIR -profile1=clus_in -profile2=clus_prf -align ; \
                           cat clus_in.pir |sed "s/^>DL;/#/g"|sed "s/^>P1;/%/g" |sed "s/^\*$//g" >out1; )); \
            /bin/rm -f clus_in* in1)

itemhelp:clustalw.help


in:in1
