item:ClustalW DNA Alignment (experts only)
itemmeta: N
itemmethod:(tr '"%//' '>' <in1 >clus_in ; \
            RUN_IN_WINDOW((clustalw -output=PIR -infile=clus_in -align -ktuple=$KTUP_ -window=$WIN_ \
                                    -topdiags=$WIN_ -gapopen=$FIXED_ -gapext=$FLOAT_ -transweight=0.5 -type=DNA \
                                    -pwdnamatrix=$PWDNAMATRIX_ -dnamatrix=$DNAMATRIX_; \
                           cat clus_in.pir | sed "s/^>DL;/#/g" | sed "s/^>P1;/%/g" |sed "s/^\*$//g" >out1; )) ; \
           /bin/rm -f clus_in* in1)

itemhelp:clustalw.help

arg:KTUP
argtype:slider
arglabel:K-tuple size for fast pairwise search
argmin:1
argmax:10
argvalue:2

arg:WIN
argtype:slider
arglabel:Window size for fast pairwise search
argmin:1
argmax:10
argvalue:4

arg:PWDNAMATRIX_
argtype:choice_menu
arglabel:Weighting matrix (pairwise)
argchoice:CLUSTALW:CLUSTALW
argchoice:IUB:IUB

arg:DNAMATRIX_
argtype:choice_menu
arglabel:Weighting matrix (multiple)
argchoice:CLUSTALW:CLUSTALW
argchoice:IUB:IUB

arg:FIXED_
argtype:slider
arglabel:Gap Open Penalty
argmin:1
argmax:100
argvalue:8.7

arg:FLOAT_
arglabel:Gap Extend Penalty
argtype:slider
argmin:.001
argmax:1
argvalue:.1


in:in1
informat:flat
insave:

out:out1
outformat:flat

