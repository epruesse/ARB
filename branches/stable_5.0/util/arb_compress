    rm -f arb.tgz
    tar cfvo - demo.arb \
                arb_install.sh \
                arb_*.txt \
        `(  find bin ! -type d; \
            find PERL_SCRIPTS ! -type d; \
            find SH ! -type d; \
            find GDEHELP -name "ARB_GDEmenus"; \
            find GDEHELP/DATA_FILES ! -type d; \
            find Xlib ! -type d; \
            find lib ! -type d | grep -v "/pts/") \
        | grep -v "^.svn/" \
        | grep -v "^CVS/" \
        | grep -v "/.svn/" \
        | grep -v "/CVS/" \
        | grep -v "/unused/" \
        | grep -v "ChangeLog$" \
        | grep -v 'lib\/nas\/names.dat$' \
        | grep -v '/\..*$' \
        | grep -v '/#[^/]*$' \
        ` \
    |gzip >arb.tgz

    ls -al arb.tgz

